<div class="text-center">
  <h1>新規投稿</h1>
  <%= form_with model:@list, url:'/todolists', local:true do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
    <h4>本文</h4>
    <%= f.text_area :body, rows: '4', class: 'form-control' %>
    <h4>画像</h4>
    <%= f.file_field :image %>
    <%= f.submit '投稿' %>
  <% end %>
</div>