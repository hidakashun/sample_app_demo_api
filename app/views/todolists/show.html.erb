<div class="text-center">
  <h2>タイトル</h2>
  <p><%= @list.title %></p>
  <h2>本文</h2>
  <p><%= @list.body %></p>
  <% if @list.score < -0.7 %>
    <p class="sentiment-score"><small>※削除推奨</small></p>
  <% end %>
  <h2>画像</h2>
  <% if @list.image.attached? %>
    <%= link_to(image_tag(@list.image.variant(resize: '300x300')), @list.image, data: { lightbox: 'group',title: '投稿画像'}) %>
  <% end %>
  <div class="tag-box">
  <% @list.tags.each do |tag| %>
    <span class="label"><%= tag.name %></span>
  <% end %>
  </div>
  <%= link_to "削除", destroy_todolist_path(@list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <%= link_to "編集", edit_todolist_path(@list.id) %>
</div>